@{
}

<div class="form text-center">
    @using (Html.BeginForm("AddBook", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Title)<br />
            @Html.TextBoxFor(model => model.Title)<br />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Author)<br />
            @Html.TextBoxFor(model => model.Author)<br />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.ReleaseDate)<br />
            @Html.TextBoxFor(model => model.ReleaseDate)<br />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Description)<br />
            @Html.TextAreaFor(model => model.Description)<br />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Dodaj" />
    }

</div>
