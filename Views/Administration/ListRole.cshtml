@model IEnumerable<IdentityRole>

@using Microsoft.AspNetCore.Identity;

<a class="btn btn-primary" asp-action="CreateRole" asp-controller="Administration"> Create new role</a>

@if (Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role id: @item.Id
            </div>
            <div class="card-body">
                @item.Name
            </div>
            <div class="card-footer">
                <a class="btn btn-info" asp-controller="Administration" asp-action="EditRole" asp-route-id="@item.Id"> Edit </a>
                <a class="btn btn-danger" asp-controller="Administration" asp-action="DeleteRole"> Delete </a>
            </div>
        </div>
    }
}
else
{
    <div class="card-header">
        <p> Don't find any roles </p>

    </div>
    <div class="card-body">
        To crate role click button
        <a class="btn btn-primary" asp-action="CreateRole" asp-controller="Admnistration"> Create new role</a>
        @Html.ActionLink("Create role", "CreateRole", "Administration")
    </div>

}
