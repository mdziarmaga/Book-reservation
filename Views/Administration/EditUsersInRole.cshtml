@model List<UserRoleViewModel>

@*

    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    var roleId = ViewBag.roleId;
}
@using (Html.BeginForm("EditUsersInRole", "Administration", FormMethod.Post))
{
<div class="card p-3">
    <div class="card-title">
        <h4>List of users in this role </h4>
    </div>
    <div class="card-body">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div>
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label"> @Model[i].UserName </label>
                <input asp-for="@Model[i].UserName" hidden class="form-check-input" />
                <input asp-for="@Model[i].IdUser" hidden class="form-check-input" />
            </div>
        }
    </div>
    <div class="card-footer">
        <input type="submit" value="Add" class="btn btn-primary" asp-controller="Administration"
                asp-action="EditUsersInRole" asp-route-roleId="@roleId" />
    </div>
</div>
}