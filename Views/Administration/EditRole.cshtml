@model Library.Models.EditUserBelongedToRoleViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="form text-center">
    @using (Html.BeginForm("EditRole", "Administration", FormMethod.Post))
    {
        <div class="card p-3">
            <div class="card-header">
                Edit role
            </div>
            <div class="card-body">

                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Id) <br />
                    <input type="text" asp-for="@Model.Id" disabled class="w-50" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Name) <br />
                    <input type="text" asp-for="@Model.Name" class="w-50" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" value="Edit" />

            </div>
            <div class="card-header">
                Users belonged to this role
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    @foreach (var item in Model.Users)
                    {
                        <p> @item </p>
                    }
                }
                else
                {
                    <p> No users in this role</p>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id"> Edit users </a>
            </div>
        </div>
    }

</div>
