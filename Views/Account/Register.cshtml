@model Library.Models.RegisterModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class=" = container">
    <div class="register-form text-center p-4 m-4">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Email)<br>
                @Html.TextBoxFor(model => model.Email) <br>
                <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Password)<br>
                @Html.PasswordFor(model => model.Password)<br>
                <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.ConfirmPassword)<br>
                @Html.PasswordFor(model => model.ConfirmPassword)<br>
                <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold"></span>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationMessage("Login", new { @class = "text-danger font-weight-bold" }) <br />
                @Html.ValidationMessage("PasswordError", new { @class = "text-danger font-weight-bold" }) <br />
            }
            <button type="submit" class="btn btn-primary"> Zarejestruj</button>
        }
        <br /><label>    Masz już konto ?</label><br />
        <a href='@Url.Action("Login", "Account")' class="btn btn-outline-primary">Zaloguj się</a>
    </div>
</div>