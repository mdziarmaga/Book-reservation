@model Library.Models.ForgetPasswordModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


@using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.DisplayNameFor(item => item.Email)<br />
        @Html.TextBoxFor(item => item.Email)<br />
        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
    </div>


    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationMessage("Error", new { @class = "text-danger font-weight-bold" })
        <br />
    }

    <button type="submit" class="btn btn-primary"> Wyślij </button>

}