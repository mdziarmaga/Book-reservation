@model Library.Models.ResetPasswordModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.DisplayNameFor(item => item.Password)<br />
        @Html.PasswordFor(item => item.Password)<br />
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(item => item.ConfirmPassword)<br />
        @Html.PasswordFor(item => item.ConfirmPassword)<br />
        <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold"></span>
    </div>
    <input type="hidden" asp-for="Email" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />
    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationMessage("Error", new { @class = "text-danger font-weight-bold" })
        <br />
    }

    <button type="submit" class="btn btn-primary"> Zapisz </button>

}